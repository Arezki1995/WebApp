extends includes/globalLayout.pug
block main
	link(rel="stylesheet", href="/assets/css/globalContent.css")
	link(rel="stylesheet", href="/assets/css/productItem.css")
	div(class='main-content-header') 
		h1 List of Products
	div(class='main-content-body')
		each product, i in products
			div(class='item-container')
				img(class='product-image' src=product.imgUrl, alt="alt")
				h2(class='product-designation')= product.designation
				h3(class='product-price')= "Prix: "+ product.price+"â‚¬"
				p(class='product-details')= product.details


block splash
	div(style="height:var(--nav-bar-height);")


block aside
	div(class='content-header')
		h1 Side content header
	div(class='content-body')
		p side content